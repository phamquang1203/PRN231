@model DTO.UserLoginDTO

@{
    ViewData["Title"] = "Login";
}

<div>
    <h1>Login</h1>
    <form asp-action="Index">
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Email"></label>
            <div class="col-sm-5">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-5">
                <input asp-for="Password" type="password"
                       class="form-control" />
            </div>
        </div>
        <input id="ReturnUrl" name="ReturnUrl" type="hidden" value="@ViewData["ReturnUrl"]" />
        <div class="row offset-sm-2">
            <button type="submit" class="btn btn-primary col-sm-2">Login</button>
        </div>
    </form>
    @{
        if (ViewData["Login"] != null)
        {
            <div class="row ml-0 mr-0">
                <p class="text-danger">@ViewData["Login"]</p>
            </div>
        }
    }
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
