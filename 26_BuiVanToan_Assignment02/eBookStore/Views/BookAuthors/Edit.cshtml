@model _26_BuiVanToan_BusinessObject.BookAuthor

@{
    ViewData["Title"] = "Edit Book Author";
}

<h1>Edit</h1>

<h4>Book Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuthorId" />
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="AuthorOrder" />
             <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <input class="form-control" readonly value="@(Model != null ? Model.Book.Title : "")" />
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <input class="form-control" readonly value="@(Model != null ? Model.Author.LastName : "")" />
            </div>
     
            <div class="form-group">
                <label asp-for="RoyalityPercentage" class="control-label"></label>
                <input asp-for="RoyalityPercentage" class="form-control" />
                <span asp-validation-for="RoyalityPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewData["BookAuthors"] != null)
{
    <div class="row ml-0 mr-0">
        <p class="text-danger">@ViewData["BookAuthors"]</p>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
